@require '../../common/styles/global-variables.styl'

.advantages
  padding-top: $default-offset * 4
  @media(min-width: $large)
    padding-top: 0
  .col-6
    padding-left: 0

  &__part
    &--right
      padding: $default-offset * 6 $default-offset $default-offset * 2 $default-offset * 2
      height: 101%
      @media(min-width: $large)
        padding-top: $default-offset * 13
        padding-bottom: $default-offset * 4.5
        padding-left: $default-offset * 7
    &--left
      position: relative
      display: flex
      flex-direction: column
      justify-content: center
      &::before
        position: absolute
        top: -1px
        right: 130px
        size(1000%, 80px)
        background-color: $firefly
        @media(min-width: $large)
          content: ''

  &__title
    padding-bottom: $default-offset * 5
    font-size: 25px
    font-family: $font-family-general--light
    color: $white
    text-transform: uppercase
    line-height: 40px
    @media(min-width: $small)
      font-size: 34px

  &__list
    margin-bottom: $default-offset * 5
    display: flex
    flex-direction: column
    flex-wrap: wrap
    align-items: flex-start
    justify-content: center
    color: $white
    list-style-type: none
    @media(min-width: $small)
      justify-content: flex-start
    @media(min-width: $medium)
      flex-direction: row
    @media(min-width: $large)
      margin-bottom: 0

  &__item
    font-size: 15px
    text-transform: uppercase
    @media(min-width: $medium)
      width: 285px
    &:not(:first-child)
      margin-top: $default-offset
    &:nth-child(2n)
      @media(min-width: $medium)
        margin-top: 0
      @media(min-width: $large)
        margin-top: $default-offset * 8

  &__item-number
    margin-bottom: $default-offset * 2
    display: flex
    justify-content: center
    align-items: center
    size(35px)
    border: 3px solid $white
    border-radius: 50%
    font-size: 16px

  &__icon
    margin-bottom: $default-offset * 3
    @media(min-width: $extra-large)
      size(136px, 152px)
      padding-top: $default-offset
    svg
      @media(min-width: $extra-large)
        size(100%)