@require '../../common/styles/global-variables.styl'

.partners
  padding: $default-offset * 6 0 $default-offset * 6
  @media(min-width: $large)
    padding: $default-offset * 6 0 $default-offset * 9
  &__logos-list
    margin-top: $default-offset * 8
    display: flex
    flex-wrap: wrap
    justify-content: center
    align-items: center
    list-style-type: none

  &__logo
    margin-bottom: $default-offset * 5
    margin-right: $default-offset * 2
    width: 25%
    min-width: 150px
    text-align: center
    @media(min-width: $large)
      margin-right: 0
      margin-bottom: $default-offset * 3.5
