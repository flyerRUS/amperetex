size(w, h = false)
  width w
  if h
    height h
  else
    height w

placeholder()
  &::-webkit-input-placeholder
    {block}
  &::-moz-placeholder
    {block}
  &:-ms-input-placeholder
    {block}
  &:-moz-placeholder
    {block}

scrollbar()
  &::-webkit-scrollbar
    {block}

scrollbar-thumb()
  &::-webkit-scrollbar-thumb
    {block}